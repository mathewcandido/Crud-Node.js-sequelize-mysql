<div class="container">
    <div class="row">
        <div class="posts">
            <div class="card">
                <h3 class="text-center">Listar Postagens</h3>
                <div class="btn-add">
                    <a href="/add" class="btn btn-success float-right"><i class="fa fa-plus"></i> Adicionar</a>
                </div>
                {{#each posts}}
                <h5 class="card-header">{{ dataValues.titulo }}</h5>
                <div class="card-body">
                    <p class="card-text">{{ dataValues.conteudo }}</p>
                    <a href="/delete/{{ dataValues.id }}">
                        <button class="btn btn-sm btn-danger float-righ"
                            onclick="return confirm('Deseja excluir este registro?');">
                            <i class="fa fa-trash"></i>
                            Excluir</button></a>
                    <a href="/edit/{{ dataValues.id }}">
                        <button class="btn btn-sm btn-primary float-righ mr-2 text-white">
                            <i class="fa fa-pencil"></i>
                            Editar</button></a>
                </div><br>
                {{else}}
                <div class="card-body">
                    <p class="card-text">Nenhum registro encontrado!</p>
                </div>
                {{/each}}
            </div>
        </div>
    </div>